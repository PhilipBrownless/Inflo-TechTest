@model X.PagedList.IPagedList<UserManagement.Models.UserActionLog>
@using X.PagedList.Mvc.Core;

@{
	ViewData["Title"] = "Logs";
}

<h1>Logs</h1>

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.First().timeStamp)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.First().UserId)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.First().actionType)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.timeStamp)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UserId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.actionType)
				</td>
				<td>
					<a asp-controller="UserActionLogs" asp-action="View" asp-route-id="@item.Id">Details</a>
				</td>
			</tr>
		}
		</tbody>
	</table>

	Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

	@Html.PagedListPager(Model, page => Url.Action("List",
	new { page }))

</div>